<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="IntegrationTest">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.github.jabroekens.spotitube.model.user.User</class>
        <class>com.github.jabroekens.spotitube.model.track.Performer</class>
        <class>com.github.jabroekens.spotitube.model.track.Album</class>
        <class>com.github.jabroekens.spotitube.model.track.Track</class>
        <class>com.github.jabroekens.spotitube.model.track.playlist.Playlist</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="postgres"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
